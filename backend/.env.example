# Secure Financial Data Platform - Environment Configuration
# सुरक्षित वित्तीय डेटा प्लेटफॉर्म - पर्यावरण कॉन्फ़िगरेशन

# Application Environment
NODE_ENV=development
PORT=5000
APP_NAME="Secure Financial Data Platform"

# Database Configuration
# डेटाबेस कॉन्फ़िगरेशन
MONGODB_URI=mongodb://localhost:27017/secure_fin_data
DB_NAME=secure_fin_data

# JWT Configuration
# JWT कॉन्फ़िगरेशन
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=24h

# Encryption Configuration
# एन्क्रिप्शन कॉन्फ़िगरेशन
ENCRYPTION_KEY=your-encryption-key-32-bytes-change-in-production-make-secure
AES_KEY_SIZE=256
RSA_KEY_SIZE=2048

# File Upload Configuration
# फाइल अपलोड कॉन्फ़िगरेशन
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv,.pdf

# CORS Configuration
# CORS कॉन्फ़िगरेशन
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
# दर सीमा कॉन्फ़िगरेशन
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=true

# Security Configuration
# सुरक्षा कॉन्फ़िगरेशन
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_SECRET=your-cookie-secret-change-in-production

# Key Store Configuration (DEMO ONLY)
# की स्टोर कॉन्फ़िगरेशन (केवल डेमो)
KEY_STORE_DIR=./keys/store
KEY_STORE_SECRET=demo-key-store-secret-change-in-production

# Logging Configuration
# लॉगिंग कॉन्फ़िगरेशन
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Redis Configuration (Optional)
# Redis कॉन्फ़िगरेशन (वैकल्पिक)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (for notifications)
# ईमेल कॉन्फ़िगरेशन (सूचनाओं के लिए)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@secureFinance.demo
FROM_NAME="Secure Finance Platform"

# Monitoring Configuration
# निगरानी कॉन्फ़िगरेशन
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
AUDIT_LOG_ENABLED=true

# External Services (Production)
# बाह्य सेवाएं (उत्पादन)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=your-s3-bucket
# AWS_KMS_KEY_ID=your-kms-key-id

# Development/Demo Configuration
# विकास/डेमो कॉन्फ़िगरेशन
DEMO_MODE=true
DEMO_USER_EMAIL=demo@example.com
DEMO_ADMIN_EMAIL=admin@example.com
SEED_DATA_ON_START=false

# Security Headers
# सुरक्षा हेडर
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NOOPEN_ENABLED=true
HELMET_NOSNIFF_ENABLED=true
HELMET_XSSFILTER_ENABLED=true

# Performance Configuration
# प्रदर्शन कॉन्फ़िगरेशन
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# API Documentation
# एपीआई दस्तावेज़ीकरण
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs
API_VERSION=v1

# Feature Flags
# फीचर फ्लैग
FEATURE_FILE_ENCRYPTION=true
FEATURE_METRICS_EXTRACTION=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true
FEATURE_ADMIN_PANEL=true

# Production Security (Uncomment and set for production)
# उत्पादन सुरक्षा (उत्पादन के लिए अनकमेंट और सेट करें)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# FORCE_HTTPS=true
# TRUST_PROXY=true
# SECURE_COOKIES=true