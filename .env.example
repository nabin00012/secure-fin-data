# Environment variables for secure-fin-data
# Copy this file to .env and update with your actual values

# Backend Configuration
PORT=5000
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/secure-fin-data

# Encryption Settings (DEMO ONLY - Replace with KMS in production)
RSA_KEY_SIZE=2048
AES_KEY_SIZE=256
HMAC_SECRET=demo-hmac-secret-key-replace-in-production-12345
CEK_WRAP_ALGORITHM=RSA-OAEP

# JWT Settings
JWT_SECRET=demo-jwt-secret-replace-in-production-abcdef123456
JWT_EXPIRES_IN=7d

# Security Settings
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.pdf

# HTTPS Settings (for local development)
HTTPS_ENABLED=true
SSL_KEY_PATH=./infra/certs/server.key
SSL_CERT_PATH=./infra/certs/server.crt

# Database Encryption
DB_ENCRYPTION_KEY=demo-db-key-32-chars-long-replace
ENABLE_FIELD_ENCRYPTION=true

# Audit & Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log
LOG_LEVEL=info

# KMS Integration (Optional - for production)
# AWS_KMS_KEY_ID=arn:aws:kms:region:account:key/key-id
# AWS_REGION=us-east-1
# KMS_ENABLED=false

# Frontend Configuration
REACT_APP_API_BASE_URL=https://localhost:5000/api
REACT_APP_ENABLE_HTTPS=true

# Demo Data
DEMO_MODE=true
GENERATE_SAMPLE_DATA=true